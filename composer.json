{
    "name": "serafim/zephir-composer-plugin",
    "description": "Composer plugin to supports installation of zephir-lang based sources",
    "type": "composer-plugin",
    "license": "MIT",
    "authors": [
        {
            "name": "Nesmeyanov Kirill",
            "email": "nesk@xakep.ru"
        }
    ],
    "prefer-stable": true,
    "require": {
        "php": ">=7.0",
        "composer-plugin-api": "^2.3.0"
    },
    "require-dev": {
        "composer/composer": "~1.1",
        "phpunit/phpunit": "~6.0"
    },
    "autoload": {
        "psr-4": {
            "Zephir\\Composer\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "extra": {
        "class": "Zephir\\Composer\\ComposerPlugin"
    },
    "config": {
        "optimize-autoloader": true
    }
}
